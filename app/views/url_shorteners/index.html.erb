<div class="container">
	<br>
	<br>
	<%= form_for @url, html: {class: "form-horizontal"} do |f| %>
		<div class="form-group">
			<%= f.label :long_url, "Shrink New Url: ", class: "col-sm-2 control-label" %>
			<div class="col-sm-10">
			<%= f.url_field :long_url, class: "form-control", placeholder: "http://www.google.com" %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit "Enter", class: "btn btn-primary" %>
			</div>
		</div>
	<% end %>

	<br>
	<br>
	<table class="table table-hover">
		<tr>
			<td> Shorten ID </td>
			<td> URL </td>
			<td> Clicked Count </td>
		</tr>
		<% unless @ary.nil? %>
			<% @ary.each do |row| %>
				<tr>
					<td>
					<%= row.id.to_s %>
					</td>
					<td>
						<a href=<%= row.url.to_s %>><%= row.url.to_s %></a>
					</td>
					<td>
					<%= row.click_count.to_s %>
					</td>
				</tr>
			<% end %>
		<% end %>
	</table>
</div>